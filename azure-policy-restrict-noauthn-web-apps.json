{
  "mode": "All",
  "parameters": {
    "policyEffect": {
      "type": "string",
      "metadata": {
        "description": "The effect of the policy.",
        "displayName": "Policy Effect"
      },
      "allowedValues": [
        "Audit",
        "Deny"
      ]
    }
  },
  "displayName": "Restrict Azure Web Apps that do not require authentication.",
  "description": "This policy enables you Azure Web Apps that do not require authentication.",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "Microsoft.Web/sites/config/siteAuthEnabled",
          "equals": "false"
        }
      ]
    },
    "then": {
      "effect": "[parameters('policyEffect')]"
    }
  }
}
